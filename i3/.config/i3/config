client.focused           $focused_border $focused_border $text $focused_border $focused_border
client.focused_inactive	 $nofocus_border $nofocus_border $text $nofocus_border $nofocus_border
client.unfocused         $nofocus_border $nofocus_border $text $nofocus_border $nofocus_border
client.urgent            $urgent_border  $black          $text $urgent_border  $urgent_border

